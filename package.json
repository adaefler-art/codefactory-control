{
  "name": "codefactory-control",
  "version": "0.4.0",
  "private": true,
  "bin": {
    "codefactory-control": "bin/codefactory-control.ts",
    "afu9-deploy-memory-analyze": "bin/afu9-deploy-memory-analyze.ts"
  },
  "scripts": {
    "build": "npm run validate-secrets && tsc",
    "watch": "tsc -w",
    "dev:control-center": "npm --prefix control-center run dev --",
    "cdk": "cdk",
    "synth": "ts-node scripts/synth-with-validation.ts",
    "synth:no-validation": "cdk synth",
    "deploy": "npm run validate-secrets && cdk deploy",
    "destroy": "cdk destroy",
    "validate-secrets": "ts-node scripts/validate-secrets.ts",
    "validate-iam": "ts-node scripts/validate-iam-policies.ts",
    "validate:diff": "ts-node scripts/validate-cdk-diff.ts",
    "security:check": "npm run validate-iam",
    "ecs:diagnose": "pwsh -File scripts/ecs_diagnose.ps1",
    "smoke:epic4": "pwsh -File scripts/smoke_epic4.ps1",
    "ecs:debug": "pwsh -File scripts/ecs_debug.ps1",
    "import-v04-issues": "ts-node scripts/import-afu9-v04-issues.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@octokit/rest": "^22.0.1",
    "@types/jest": "^29.5.14",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.19.3",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "aws-cdk-lib": "2.162.1",
    "constructs": "^10.0.0",
    "esbuild": "^0.27.1",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.950.0",
    "@aws-sdk/client-dynamodb": "^3.950.0",
    "@aws-sdk/client-secrets-manager": "^3.950.0",
    "@aws-sdk/client-sfn": "^3.726.0",
    "@aws-sdk/lib-dynamodb": "^3.950.0",
    "@codefactory/deploy-memory": "file:packages/deploy-memory",
    "@codefactory/verdict-engine": "file:packages/verdict-engine",
    "dotenv": "^17.2.3",
    "minimist": "^1.2.8",
    "octokit": "^4.0.0"
  }
}
