# GitHub Configuration
GITHUB_TOKEN=ghp_your_token_here
GITHUB_OWNER=adaefler-art
GITHUB_REPO=rhythmologicum-connect
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# LLM Configuration
# OpenAI (GPT models)
OPENAI_API_KEY=sk-your_key_here
OPENAI_MODEL=gpt-4o-mini

# DeepSeek (OpenAI-compatible API)
DEEPSEEK_API_KEY=sk-your_deepseek_key_here

# Anthropic (Claude models)
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Cognito Authentication
# Configure these values after deploying Afu9AuthStack
COGNITO_REGION=eu-central-1
COGNITO_USER_POOL_ID=eu-central-1_XXXXXXXXX
COGNITO_CLIENT_ID=your_client_id_here
COGNITO_ISSUER_URL=https://cognito-idp.eu-central-1.amazonaws.com/eu-central-1_XXXXXXXXX

# Landing page URL for authentication redirects (optional, defaults to https://afu-9.com/)
LANDING_PAGE_URL=https://afu-9.com/

# Debug Mode
# Enable verbose logging for troubleshooting workflows, agents, and MCP calls
AFU9_DEBUG_MODE=true

# Authentication Configuration (AFU9-AUTH-HARDENING)

# Cookie name for ID token (default: afu9_id)
AFU9_AUTH_COOKIE=afu9_id

# Redirect URL for unauthenticated users (default: https://afu-9.com/)
AFU9_UNAUTH_REDIRECT=https://afu-9.com/

# JWT groups claim key (default: cognito:groups)
AFU9_GROUPS_CLAIM=cognito:groups

# Stage/Group Mapping (comma-separated group names)
AFU9_STAGE_GROUP_PROD=afu9-admin-prod
AFU9_STAGE_GROUP_STAGING=afu9-engineer-stage,afu9-readonly-stage
AFU9_STAGE_GROUP_DEV=afu9-engineer-stage,afu9-readonly-stage

# Default stage if hostname doesn't match known patterns (default: stage)
AFU9_DEFAULT_STAGE=stage
