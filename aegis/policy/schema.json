{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AEGIS Policy v1",
  "type": "object",
  "required": ["policy_version", "rules"],
  "additionalProperties": false,
  "properties": {
    "policy_version": {
      "type": "string",
      "const": "aegis.policy.v1"
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "learning_mode": { "type": "boolean" }
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "when", "then", "severity", "reason"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "when": { "type": "string", "minLength": 1 },
          "then": {
            "type": "string",
            "enum": [
              "KILL_AND_ROLLBACK",
              "HOLD_FOR_HUMAN",
              "REQUIRE_APPROVAL",
              "ALLOW"
            ]
          },
          "severity": {
            "type": "string",
            "enum": ["BLOCK", "HIGH", "INFO"]
          },
          "reason": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
