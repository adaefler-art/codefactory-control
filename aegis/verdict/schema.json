{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AEGIS Verdict v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "policy_version",
    "run",
    "inputs",
    "policy_evaluation",
    "scorecard",
    "verdict",
    "rationale"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "aegis.verdict.v1"
    },
    "policy_version": {
      "type": "string",
      "const": "aegis.policy.v1"
    },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": ["run_id", "timestamp_utc", "repo", "pr_number", "head_sha"],
      "properties": {
        "run_id": { "type": "string", "minLength": 1 },
        "timestamp_utc": { "type": "string", "format": "date-time" },
        "repo": { "type": "string", "minLength": 1 },
        "pr_number": { "type": "integer", "minimum": 1 },
        "head_sha": { "type": "string", "minLength": 6 }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["learning_mode", "change_summary", "signals"],
      "properties": {
        "learning_mode": { "type": "boolean" },
        "change_summary": {
          "type": "object",
          "additionalProperties": false,
          "required": ["files_changed", "change_flags"],
          "properties": {
            "files_changed": { "type": "integer", "minimum": 0 },
            "touched_paths": {
              "type": "array",
              "items": { "type": "string" }
            },
            "change_flags": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "infra_change",
                "db_migration",
                "auth_change",
                "secrets_change",
                "dependency_change"
              ],
              "properties": {
                "infra_change": { "type": "boolean" },
                "db_migration": { "type": "boolean" },
                "auth_change": { "type": "boolean" },
                "secrets_change": { "type": "boolean" },
                "dependency_change": { "type": "boolean" },
                "permission_change": { "type": "boolean" }
              }
            }
          }
        },
        "signals": {
          "type": "object",
          "additionalProperties": false,
          "required": ["ci", "security"],
          "properties": {
            "ci": {
              "type": "object",
              "additionalProperties": false,
              "required": ["status"],
              "properties": {
                "status": { "type": "string", "enum": ["success", "failure"] },
                "coverage_delta": { "type": "number" },
                "checks": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["name"],
                    "properties": {
                      "name": { "type": "string" },
                      "url": { "type": "string" },
                      "conclusion": { "type": "string" }
                    }
                  }
                }
              }
            },
            "security": {
              "type": "object",
              "additionalProperties": false,
              "required": ["critical_count", "high_count"],
              "properties": {
                "critical_count": { "type": "integer", "minimum": 0 },
                "high_count": { "type": "integer", "minimum": 0 }
              }
            },
            "canary": {
              "type": "object",
              "additionalProperties": false,
              "required": ["passed"],
              "properties": {
                "passed": { "type": "boolean" },
                "error_rate": { "type": "number" },
                "latency_delta": { "type": "number" }
              }
            }
          }
        }
      }
    },
    "policy_evaluation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["matched_rules", "policy_action", "proposed_factory_action"],
      "properties": {
        "matched_rules": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["rule_id", "severity", "then", "reason"],
            "properties": {
              "rule_id": { "type": "string" },
              "severity": { "type": "string", "enum": ["BLOCK", "HIGH", "INFO"] },
              "then": {
                "type": "string",
                "enum": ["KILL_AND_ROLLBACK", "HOLD_FOR_HUMAN", "REQUIRE_APPROVAL", "ALLOW"]
              },
              "reason": { "type": "string" }
            }
          }
        },
        "policy_action": {
          "type": "string",
          "enum": ["KILL_AND_ROLLBACK", "HOLD_FOR_HUMAN", "REQUIRE_APPROVAL", "ALLOW", "NONE"]
        },
        "proposed_factory_action": {
          "type": "string",
          "enum": ["APPROVE_AUTOMERGE_DEPLOY", "HOLD_FOR_HUMAN", "KILL_AND_ROLLBACK", "NONE"]
        }
      }
    },
    "scorecard": {
      "type": "object",
      "additionalProperties": false,
      "required": ["overall", "dimensions", "risk_level"],
      "properties": {
        "overall": { "type": "integer", "minimum": 0, "maximum": 100 },
        "dimensions": {
          "type": "object",
          "additionalProperties": false,
          "required": ["tests", "security", "risk", "ops", "policy"],
          "properties": {
            "tests": { "type": "integer", "minimum": 0, "maximum": 100 },
            "security": { "type": "integer", "minimum": 0, "maximum": 100 },
            "risk": { "type": "integer", "minimum": 0, "maximum": 100 },
            "ops": { "type": "integer", "minimum": 0, "maximum": 100 },
            "policy": { "type": "integer", "minimum": 0, "maximum": 100 }
          }
        },
        "risk_level": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH"] }
      }
    },
    "verdict": {
      "type": "object",
      "additionalProperties": false,
      "required": ["proposed_action", "confidence", "recommended_next_steps"],
      "properties": {
        "proposed_action": {
          "type": "string",
          "enum": ["APPROVE_AUTOMERGE_DEPLOY", "HOLD_FOR_HUMAN", "KILL_AND_ROLLBACK"]
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "recommended_next_steps": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "rationale": {
      "type": "object",
      "additionalProperties": false,
      "required": ["summary", "key_evidence_refs"],
      "properties": {
        "summary": { "type": "string" },
        "key_evidence_refs": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
